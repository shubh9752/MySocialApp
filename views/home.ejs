    
    <h1><%=description%></h1>
    <div id="feeds">
        <h3>POSTS</h3>
        <% if(locals.user) {%> 
        <form action="/post/create" id="new-post" method="post">
            <textarea name="content" id="" cols="28" rows="5"></textarea>
            <input type="submit" value="Post" placeholder="type post...">
        </form>
        <% } %> 
        <div id="posts-list">
            <ul>
                <% for(post of post){ %>
                    <li>
                       <p>
                        <%= post.content %> 
                        <br>
                        <small>
                            <%= post.user.name  %> 
                        </small>
                       </p>
                       <div class="post-comments">
                        <% if(locals.user){%>
                            <form action="/comments/create" method="post">
                                <input type="text" name="content" placeholder="comments">
                                <input type="hidden" name="post" value="<%= post._id %>">
                                <input type="submit" value="add comment">
                            </form> 
                        <% } %> 
                                 
                       </div>
                    </li>
                
                <% } %>  
            </ul>

        </div>
    </div>
